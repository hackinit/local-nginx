server {
    listen 80;
    listen [::]:80;
    server_name resources.thehack.org.cn;

    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name resources.thehack.org.cn;

    # ssl settings and certificates
    include ssl/ssl.nginxconf;

    root /mnt/download;
    autoindex on;
}
